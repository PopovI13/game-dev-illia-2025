<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Click the Circle Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f8ff;
        }
        #gameArea {
            position: relative;
            width: 500px;
            height: 400px;
            border: 2px solid #333;
            background-color: #fff;
            overflow: hidden;
        }
        .circle {
            position: absolute;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: red;
            cursor: pointer;
        }
        #score {
            font-size: 24px;
            margin: 20px;
        }
        #startBtn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<h1>Click the Circle Game</h1>
<div id="score">Score: 0</div>
<button id="startBtn">Start Game</button>
<div id="gameArea"></div>

<script>
    const gameArea = document.getElementById('gameArea');
    const scoreDisplay = document.getElementById('score');
    const startBtn = document.getElementById('startBtn');

    let score = 0;
    let gameInterval;

    function createCircle() {
        const circle = document.createElement('div');
        circle.classList.add('circle');

        // Random position inside game area
        const maxX = gameArea.clientWidth - 50;
        const maxY = gameArea.clientHeight - 50;
        const x = Math.floor(Math.random() * maxX);
        const y = Math.floor(Math.random() * maxY);

        circle.style.left = x + 'px';
        circle.style.top = y + 'px';

        circle.addEventListener('click', () => {
            score++;
            scoreDisplay.textContent = `Score: ${score}`;
            circle.remove();
        });

        gameArea.appendChild(circle);

        // Remove circle after 2 seconds if not clicked
        setTimeout(() => {
            if (circle.parentElement) circle.remove();
        }, 2000);
    }

    function startGame() {
        score = 0;
        scoreDisplay.textContent = 'Score: 0';
        clearInterval(gameInterval);

        gameInterval = setInterval(createCircle, 1000);
    }

    startBtn.addEventListener('click', startGame);
</script>

</body>
</html>
